#include <functional>

#include <opencog/atoms/execution/GroundedObject.h>
#include <opencog/atoms/execution/GroundedObjectNode.h>

using namespace opencog;

class GroundedObjectNodeUTest : public CxxTest::TestSuite
{
public:

	void setUp()
	{
	}

	void tearDown()
	{
	}

	void test_grounded_object_node_generated_name()
	{
		std::shared_ptr<GroundedObject> foo((GroundedObject*)0x123ABC,
											[](GroundedObject*){});

		GroundedObjectNode* node = new GroundedObjectNode(foo);

		TS_ASSERT_EQUALS(node->get_name(), "grounded-object-node-0x123abc")
	}

	void test_grounded_object_node_generated_name_max_length()
	{
		std::shared_ptr<GroundedObject> foo((GroundedObject*)0x1122334455667788,
											[](GroundedObject*){});

		GroundedObjectNode* node = new GroundedObjectNode(foo);

		TS_ASSERT_EQUALS(node->get_name(), "grounded-object-node-0x1122334455667788")
	}
};
